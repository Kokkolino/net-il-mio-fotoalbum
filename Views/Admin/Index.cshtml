@model IndexFilter

@{
    ViewData["Title"] = "Home Page";
}
<div class="ms-4">
    <a class="btn btn-outline-success me-3" href="@Url.Action("Create" ,"Admin")">Aggiungi Foto</a>
    <a class="btn btn-outline-primary " href="@Url.Action("Tags" ,"Admin")">Nuovi Tags</a>
</div>

<form asp-action="Index">
        <div class="d-flex offset-2">
            <button class="btn btn-outline-light mx-4 mb-4 d-inline" type="submit">filtra</button>

            <input asp-for="@Model.Filter" class="form-control form-control-sm bg-transparent text-white mb-4 col-4" type="text" placeholder="Filtra foto per titolo">
        </div>
    </form>


<div class="container d-flex justify-content-center flex-wrap gap-4">

    @foreach(Photo item in Model.Photos)
    {
        @await Html.PartialAsync("_Card", item)
    }

</div>
